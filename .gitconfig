[user]
  name = Aaron Burtnyk
  email = email-goes-here

[core]
  autocrlf = input

[alias]
  a = add
  b = branch
  c = commit
  d = diff
  f = fetch
  l = log --stat
  m = merge
  s = status

  al = config --get-regexp alias
  bc = branch --contains
  bd = branch -d
  ch = checkout
  cp = cherry-pick
  ds = diff --stat
  dw = diff -w
  lp = log --pretty=format:'%C(yellow)%h %Creset%s %Cgreen[%ad] %Cred[%an]' --date=local
  lm = "!U=$(git config user.name) && git log --author="\"$U\"" --pretty=format:'%C(yellow)%h %Creset%s %Cgreen[%ad] %Cred[%an]' --date=local"
  rh = reset --hard
  sh = show

  sa = "!sh -c 'git stash apply stash@{$1}' -"
  sd = "!sh -c 'git stash drop stash@{$1}' -"
  sl = stash list
  ss = "!sh -c 'git stash show -p stash@{$1}' -"

  ploc = "!f() { B=`git branch | grep '^\\*' | awk '{print $2}'`; echo "Pulling from $B..."; git pull origin $B; }; f"
  psoc = "!f() { B=`git branch | grep '^\\*' | awk '{print $2}'`; echo "Pushing to $B..."; git push origin $B; }; f"

  fff = flow feature finish
  ffs = flow feature start

  stats = shortlog -sn --no-merges
  stalk = "!f() { git log --author=$1 --pretty=format:'%C(yellow)%h %Creset%s %Cgreen[%ad] %Cred[%an]' --date=short; }; f"

[color]
  ui = true

[color "diff"]
  whitespace = white reverse

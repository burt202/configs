/etc/apache2/sites-enabled/

<VirtualHost *:80>
  ServerName browser.burtdev.dev

  DocumentRoot /home/burt/dev/browser-share/public
  <Directory /home/burt/dev/browser-share/public>
    Options Indexes FollowSymLinks
    AllowOverride All
    Require all granted
  </Directory>

  SetEnv APPLICATION_ENV "development"

  ErrorLog ${APACHE_LOG_DIR}/browser-burtdev-error.log
  CustomLog ${APACHE_LOG_DIR}/browser-burtdev-access.log combined
  LogLevel warn
</VirtualHost>
